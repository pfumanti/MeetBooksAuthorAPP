<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditTextPreference
        android:title="@string/pref_remaining_days_label"
        android:key="@string/pref_remaining_days_key"
        android:defaultValue="@string/pref_remaining_days_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/pref_states_label"
        android:key="@string/pref_states_key"
        android:defaultValue="@string/pref_states_any"
        android:entryValues="@array/pref_states_values"
        android:entries="@array/pref_states_options" />

</PreferenceScreen>