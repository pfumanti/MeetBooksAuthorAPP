<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/meeting_blue</item>
        <item name="colorPrimaryDark">@color/meeting_dark_blue</item>
    </style>

    <!-- Settings theme.BEGIN -->

    <!-- the theme applied to the application or activity -->
    <style name="SettingsThemes"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/yellow_sand</item>


    </style>

    <!-- FINE -->

    <!-- Main activity theme. -->
    <style name="WeatherMainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Meeting.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Meeting.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>

    <style name="MeetingListStyle">
        <!-- Here it's a stub. In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>


</resources>
